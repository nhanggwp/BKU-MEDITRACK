# DDI Service Configuration Example
# Copy to .env and customize as needed

# Model Configuration
DDI_MODEL_PATH=/app/models/best_ddi_model.pt
DDI_HIDDEN_DIM=1024
DDI_DROPOUT=0.4

# Training Configuration  
DDI_EPOCHS=10
DDI_BATCH_SIZE=256
DDI_LEARNING_RATE=0.001
DDI_DEVICE=auto

# Data Configuration
DDI_DATASET=TWOSIDES
DDI_CACHE_DIR=/app/cache
DDI_USE_CACHE=true

# Server Configuration
DDI_HOST=0.0.0.0
DDI_PORT=8000
DDI_WORKERS=1
DDI_LOG_LEVEL=info

# Environment
DDI_ENVIRONMENT=production
DDI_DEBUG=false

# Optional: Database for results
POSTGRES_DB=ddi_results
POSTGRES_USER=ddi_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Optional: Monitoring
PROMETHEUS_ENABLED=false
GF_SECURITY_ADMIN_PASSWORD=your_secure_grafana_password_here
